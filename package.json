{
  "name": "smart-healthcare-system",
  "version": "1.0.0",
  "description": "Smart Healthcare System for Urban Hospitals",
  "type": "module",
  "workspaces": [
    "apps/client",
    "apps/server",
    "packages/shared"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:client": "cd apps/client && npm run dev",
    "dev:server": "cd apps/server && npm run dev",
    "build": "npm run build:shared && npm run build:server && npm run build:client",
    "build:client": "cd apps/client && npm run build",
    "build:server": "cd apps/server && npm run build",
    "build:shared": "cd packages/shared && npm run build",
    "start": "cd apps/server && npm start",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "install:all": "npm install && cd apps/client && npm install && cd ../server && npm install && cd ../../packages/shared && npm install"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "concurrently": "^9.2.1",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "typescript": "^5.9.3"
  }
}
